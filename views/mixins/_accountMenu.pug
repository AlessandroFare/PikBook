mixin accountMenu()
	.accountmenu
		a(href=`/${user.username}` class='nav_link') #{(user.name || user.username).split(' ')[0]}
		.dropdown
			.dropbtn
				if !user.avatar
					img.avatar_top(src=`/uploads/no-avatar.jpg`)
				else
					img.avatar_top(src=`https://res.cloudinary.com/pikbook/image/upload/${user.avatar}`) 
			.dropdown-content
				a(href='/') Home
				a(href=`/${user.username}`) Your Profile
				a(href='/account') Settings
				a(href='/logout') Logout
